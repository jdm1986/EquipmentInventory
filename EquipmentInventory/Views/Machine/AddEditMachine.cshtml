
@model EquipmentInventory.Models.MachineViewModel

@{
	var isEditMode = Model.EquipId != null;
	ViewBag.Title = isEditMode ? "Edit" + Model.MakeModel : "Add Machine";
}

<h2>@Model.MakeModel</h2>

<div class="row">
	<div class="col-sm-6 col-xs-10">
		@using (Html.BeginForm(isEditMode ? "EditMachine" : "AddMachine", "Machine"))
	{
		@Html.HiddenFor(m => m.EquipId)

		<div class="form-group">
			@Html.LabelFor(m => m.EquipMake)
			@Html.TextBoxFor(m => m.EquipMake, new { @class = "form-control" })
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.EquipModel)
			@Html.TextBoxFor(m => m.EquipModel, new { @class = "form-control" })
		</div>
		<button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
		@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
	</div>
</div>